# Your Python code here
import pandas as pd
import matplotlib.pyplot as plt

try:
    # Read the CSV file into a pandas DataFrame.
    df = pd.read_csv("data.csv")

    # Print the number of columns.
    num_columns = df.shape[1]
    print(f"Total number of columns: {num_columns}")


    # Create a plot of rows vs columns
    rows = df.shape[0]
    plt.figure(figsize=(8, 6))  # Adjust figure size for better visualization
    plt.plot([rows], [num_columns], marker='o', linestyle='-', markersize=10, color='blue')
    plt.xlabel("Number of Rows")
    plt.ylabel("Number of Columns")
    plt.title(f"Relationship between Rows and Columns in Dataset")
    plt.grid(True)
    plt.show()
    plt.savefig("output.png")


except FileNotFoundError:
    print("Error: data.csv not found in the current directory.")
except pd.errors.EmptyDataError:
    print("Error: The CSV file is empty.")
except Exception as e:
    print(f"An error occurred: {e}")
